	margin-bottom: 1em;
}
.sans {
	font-family: Myriad, "Myriad Pro", "Lucida Grande", "Lucida Sans Unicode", Lucida, "Lucida Unicode", Helvetica, sans-serif;
	font-size: 1em;
}

.serif {
	font-family: georgia;
}

a:link, a:visited, a:hover, a:active {
	font-weight: bold;
	font-weight: normal;
	text-decoration: none;
	color: #666;
}

a:hover {
	background-color: #2578D8;
	color: white;
}

a:active {
	text-decoration: underline;
}

a.readMoreLink:link, a.readMoreLink:visited, a.readMoreLink:hover, a.readMoreLink:active {
	background-color: #2578D8;
	color: white;
	text-decoration: none;
	padding: 2px 4px;
	-moz-border-radius: 3px; /* Firefox */
	-webkit-border-radius: 3px; /* Safari, Chrome */
	border-radius: 3px; /* CSS3 */

}

a.readMoreLink:hover {
	font-weight: bold;
	font-weight: normal;
	text-decoration: none;
	color: #666;
	background-color: white;
}


h1 {
	font-size: 2em;
	line-height: 1;
	/*color: #2578D8;*/
